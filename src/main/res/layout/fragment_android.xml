<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wqy.ganhuo.ui.fragment.AndroidFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/android_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wqy.ganhuo.view.AutoLoadRecyclerView
            android:id="@+id/android_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    <com.wqy.ganhuo.ui.views.MaterialCircleProgressBar
        android:id="@+id/progressbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible"
        app:needShapeBg="false"
        app:shapeSize="large"
        android:layout_gravity="center" />

</FrameLayout>
